<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

        <!--        커스텀 버튼 스타일-->
        <item name="buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/notosanskr_bold</item>
    </style>

    <!-- 바텀 네비게이션의 라벨-->
    <style name="CustomClickedLabelFont" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 바텀 네비게이션의 라벨 사이즈 커스텀-->
    <style name="CustomClickedLabelFontSize" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>