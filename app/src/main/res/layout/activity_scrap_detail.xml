<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ScrapDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/main"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/expand_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:text="_TITLE"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageThumbnail"
                android:layout_width="307dp"
                android:layout_height="161dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="43dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/bg_button"
                android:backgroundTint="#D9D9D9"
                app:layout_constraintBottom_toTopOf="@+id/imageBackground1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/imageBackground1"
                android:layout_width="364dp"
                android:layout_height="257dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_round_8dp"
                android:backgroundTint="@color/main_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageThumbnail"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/textLink"
                android:layout_width="332dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_round_10dp"
                android:backgroundTint="@color/background"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingStart="15dp"
                android:paddingEnd="55dp"
                android:text="_LINK"
                app:layout_constraintEnd_toEndOf="@+id/imageBackground1"
                app:layout_constraintStart_toStartOf="@+id/imageBackground1"
                app:layout_constraintTop_toTopOf="@+id/imageBackground1"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/buttonCopyLink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/copy"
                app:layout_constraintBottom_toBottomOf="@+id/textLink"
                app:layout_constraintEnd_toEndOf="@+id/textLink"
                app:layout_constraintTop_toTopOf="@+id/textLink" />

            <TextView
                android:id="@+id/textMAINDESCRIPTION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginBottom="17dp"
                android:includeFontPadding="false"
                android:text="@string/main_description"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/textMainDescription"
                app:layout_constraintStart_toStartOf="@+id/imageBackground1" />

            <TextView
                android:id="@+id/textMainDescription"
                android:layout_width="332dp"
                android:layout_height="110dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/bg_round_10dp"
                android:backgroundTint="@color/background"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:paddingStart="20dp"
                android:paddingTop="23dp"
                android:paddingEnd="20dp"
                android:text="@string/main_description_default"
                android:textColor="#A1A1A1"
                app:layout_constraintBottom_toBottomOf="@+id/imageBackground1"
                app:layout_constraintEnd_toEndOf="@+id/imageBackground1"
                app:layout_constraintStart_toStartOf="@+id/imageBackground1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageBackground1">

                <ImageView
                    android:id="@+id/imageBackground2"
                    android:layout_width="364dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_round_8dp"
                    android:backgroundTint="@color/main_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/textMEMO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:text="@string/memo"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/imageBackground2"
                    app:layout_constraintTop_toTopOf="@+id/imageBackground2" />

                <TextView
                    android:id="@+id/textMemo"
                    android:layout_width="332dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_round_10dp"
                    android:backgroundTint="@color/background"
                    android:elevation="8dp"
                    android:minLines="5"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="_MEMO"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="HardcodedText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>