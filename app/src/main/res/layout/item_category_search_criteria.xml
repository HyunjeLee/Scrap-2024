<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintlayout_category_search_criteria"
    tools:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_background_category_search_criteria"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="6dp"
        android:background="@drawable/bg_round_40dp_background_with_gray_light_stroke"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/tv_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:layout_marginStart="11dp"
        android:includeFontPadding="false"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv_background_category_search_criteria"
        app:layout_constraintEnd_toStartOf="@id/btn_clear_category"
        app:layout_constraintTop_toTopOf="@id/iv_background_category_search_criteria"
        app:layout_constraintBottom_toBottomOf="@id/iv_background_category_search_criteria"
        tools:text="분류 섹션 1" />

    <Button
        android:id="@+id/btn_clear_category"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/close_ring_duotone"
        app:layout_constraintTop_toTopOf="@id/iv_background_category_search_criteria"
        app:layout_constraintBottom_toBottomOf="@id/iv_background_category_search_criteria"
        app:layout_constraintStart_toEndOf="@id/tv_category_title"
        app:layout_constraintEnd_toEndOf="@id/iv_background_category_search_criteria"
        tools:layout_editor_absoluteY="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>